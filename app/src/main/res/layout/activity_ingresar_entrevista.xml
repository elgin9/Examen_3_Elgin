<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresarEntrevistaActivity"
    android:background="@color/colorBackground">

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorHint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etPeriodista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Periodista"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorHint"
        app:layout_constraintTop_toBottomOf="@id/etDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorHint"
        app:layout_constraintTop_toBottomOf="@id/etPeriodista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnTomarFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_background"
        android:text="FOTO"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFecha" />

    <ImageView
        android:id="@+id/imgEntrevistado"
        android:layout_width="379dp"
        android:layout_height="169dp"
        android:layout_margin="16dp"
        android:background="@drawable/imageview_background"
        android:contentDescription="Imagen del Entrevistado"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTomarFoto" />

    <Button
        android:id="@+id/btnGrabarAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GRABAR"
        android:textColor="@android:color/black"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/imgEntrevistado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnGuardarEntrevista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:textColor="@android:color/black"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/btnGrabarAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnReproducirAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Audio"
        android:textColor="@android:color/black"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/btnGuardarEntrevista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
